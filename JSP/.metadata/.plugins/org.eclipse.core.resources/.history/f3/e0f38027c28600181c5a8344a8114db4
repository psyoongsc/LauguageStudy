<%@ page language="java" contentType="text/html; charset=UTF-8"
    pageEncoding="UTF-8" import="java.sql.*"%>
    
<% request.setCharacterEncoding("UTF-8"); %>

<%
	String dept_id = request.getParameter("dept_id");
	String url = "jdbc:mysql://localhost:3306/ch07?useSSL=false?useUnicode=true;useCharacterEncoding=UTF-8";
	String sql = "select * from ch07.department where Dept_ID = ? ";
	
	Class.forName("com.mysql.jdbc.Driver");
	Connection conn = DriverManager.getConnection(url, "root", "1122");
	PreparedStatement pstmt = conn.prepareStatement(sql);
		pstmt.setString(1, dept_id);
	ResultSet rs = pstmt.executeQuery();
	if(rs.next()) {
		String dept_name = rs.getString(2);
		String dept_tel = rs.getString(3);
	rs.close();
	pstmt.close();
	conn.close();
%>
    
<!DOCTYPE html>
<html>
<head>
<meta charset="UTF-8">
<title>수정폼[2]</title>
<script language="JavaScript">
	function In_Click() {
		if (document.idform.dept_name.value =="") {
			alert("학과명을 입력하세요!!!");
			return;
		}
		if (document.idform.dept_tel.value == "") {
			alert("전화번호를 입력하세요!!!");
			return;
		}
		document.idform.submit();
	}
</script>
</head>
<body>
	<center>
		<h4>학과명 수정 화면</h4>
		<form method="post" action="ex007-03-2.jsp" name="idform">
		<table border="1" cellspacing="0" cellpadding="5">
			<tr>
				<td>학과코드 : </td>
				<td><input type="hidden" name="dept_id" value="<%= dept_id %>"></td></tr>
			<tr>
				<td>학과명 : </td>
				<td><input type="text" name="dept_name" value="<%= dept_name %>"></td></tr>
			<tr>
				<td>전화번호 : </td>
				<td><input type="text" name="dept_tel" value="<%= dept_tel %>"></td></tr>
			<tr align="center">
				<td colspan="2">
				<input type="button" value="수 정" OnClick="In_Click()"></td>
				<input type="reset" value="취 소">
		</table>
		</form>
	</center>
</body>
</html>

<%
	} else {
		out.println("<h3>학과코드가 존재하지 않습니다.</h3>");
	}
%>